extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.text-center Sign-In
        form(method='POST' action='/bienvenido')
          .form-group
            label(for='txtUsuario') Usuario:
            input#txtUsuario.form-control(type='text', placeholder='Usuario registrado', name='txtUsuario')
          .form-group
            label(for='txtClave') Contrase√±a:
            input#txtClave.form-control(type='password', placeholder='La clave para entrar', name='txtClave')
          br 
          button.btn.btn-primary(type='submit') Enviar
          .bg-danger.text-center #{mensaje}
          if(!validado)
            .text-center  
              a.btn.btn-warning(href='/alta') Dar de alta

          
              
  